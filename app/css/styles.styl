@import '../node_modules/bulma/css/bulma.css';
@import '../node_modules/font-awesome/css/font-awesome.css';
@import './react-flatpickr-styles.styl';


/*------------------------------------*\
    Colors
\*------------------------------------*/

colors ={
    primary: #00d1b2,
    red: #ff3860,
    green: #20bc56,
    yellow: #ffd83d,
    dark-grey: #363636,
    grey: #dbdbdb,
    grey-text: #7a7a7a

}

/*------------------------------------*\
    Base styles and utilities
\*------------------------------------*/

html, body
    background: rgba(0, 0, 0, 0)

a
    -webkit-app-region: no-drag;

::-webkit-scrollbar{
    display: none;
}


.draggable
    -webkit-app-region: drag;

.no-drag
    -webkit-app-region: no-drag;

/*From Photon.css*/
.window
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;

.window-content
    position: relative;
    overflow-y: auto;
    display: flex;
    flex: 1;

.pane-group
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;

.pane
    position: relative;
    overflow-y: auto;
    flex: 1;

.main-content
    background-color: #FFF;


.item-level{
    margin-right: 10px;
}

.fa
    margin-right: 5px
    vertical-align: baseline

.tag
    cursor: pointer;
    &:hover
        background: darken(colors.primary, 10%);

.delete
    &:hover
        background-color: colors.red;

.noSelect
    -webkit-user-select: none

.pull-right{
    float: right;
}


.btn-round
    -webkit-appearance: none;
    background-color: rgba(10, 10, 10, 0.1);
    border: none;
    border-radius: 290486px;
    cursor: pointer;
    display: inline-block;
    height: 24px;
    outline: none;
    position: relative;
    vertical-align: top;
    width: 24px;
    color:#fff;
    .fa
        margin-right: 0px !important;

.btn-success
    &:hover
        background-color: colors.green

.btn-warning
    &:hover
        background-color: colors.yellow

.btn-danger
    &:hover
        background-color: colors.red


/*------------------------------------*\
    Navbar
\*------------------------------------*/


.sidebar
    //background-color: rgba(0,0,0,1);
    width: 150px;
    min-width: 150px;
    overflow-y: scroll;
    padding: 10px

.menu
    padding-top: 30px

.menu-label
    color:#fff;
    font-size: 14px;
    .fa-plus
        cursor: pointer;
        &:hover
            color: colors.primary;
    .add-btn
        color:#fff;
        &:hover
            color: colors.primary;

.menu-list
    a
        color: #fff;
        &:hover
            color: colors.primary !important;
            background-color: transparent !important;
    .is-active
        &:hover
            color: #fff !important;
            background-color: colors.primary !important;
    .inbox-tag
        vertical-align: middle;
        height: 12px;
        &:hover
            background-color: whitesmoke;

.tag-list
    .tag
        margin-top: 10px

/*------------------------------------*\
    Main
\*------------------------------------*/

.main-content
    padding: 10px;


/*------------------------------------*\
    Tasklist
\*------------------------------------*/

/*------------------------------------*\
    Task
\*------------------------------------*/
.task
    p
        margin-bottom: 5px !important;
    .tag
        margin-right: 5px;
    .title
        margin-bottom: 5px;
        small
            margin-left: 20px;
            .due-icon
                margin-right: -5px;

    .media-right
        button
            margin-top: 5px
    .active
        color: colors.yellow;
        &:hover
            color: colors.dark-grey;

.is-edit
    border: 1px solid colors.primary
    box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
/*------------------------------------*\
    Modal
\*------------------------------------*/

.modal-content
    padding: 10px
    background-color: #fff;
    border-radius: 5px;

.modal-close
    &:hover
        background-color: colors.red;



/*------------------------------------*\
    Project
\*------------------------------------*/
.project
    .content
        ul
            list-style: none !important;
    .title
        margin-bottom: 5px;
        small
            margin-left: 20px;
            .due-icon
                margin-right: -5px;
    .menu-label
        color: colors.grey-text
    .menu-list
        border-left: 1px solid colors.grey
        margin: 10px;
        padding-left: 10px;
    .icon
        margin-left: 5px;
        display: inline;
        .fa-check
            color: colors.green;
    .media-right
        button
            margin-top: 5px
