@import '../node_modules/bulma/css/bulma.css';
@import '../node_modules/font-awesome/css/font-awesome.css';
@import './react-flatpickr-styles.styl';


/*------------------------------------*\
    Colors
\*------------------------------------*/

colors ={
    primary: #00D1B2,
    red: #ff3860,
    green: #20bc56,
    yellow: #ffd83d,
    dark-grey: #363636,
    grey: #dbdbdb,
    grey-text: #7a7a7a

}

/*------------------------------------*\
    Base styles and utilities
\*------------------------------------*/

html, body
    background: rgba(0, 0, 0, 0)

a
    -webkit-app-region: no-drag;
    color: colors.primary;


::-webkit-scrollbar{
    display: none;
}

hr
    margin: 10px 0;


.draggable
    -webkit-app-region: drag;

.no-drag
    -webkit-app-region: no-drag;

.hidden
    max-height: 0px !important;
    padding-top: 0px !important;
    opacity: 0;

/*From Photon.css*/
.window
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;

.window-content
    position: relative;
    overflow-y: auto;
    display: flex;
    flex: 1;

.pane-group
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;

.pane
    position: relative;
    overflow-y: auto;
    flex: 1;

.main-content
    background-color: #FFF;


.item-level{
    margin-right: 10px;
}

.fa
    margin-right: 5px
    vertical-align: baseline

.tag
    cursor: pointer;
    margin-right: 1px;
    &:hover
        background: darken(colors.primary, 10%) !important;

.is-primary
    background-color: colors.primary !important;

.delete
    &:hover
        background-color: colors.red;

.noSelect
    -webkit-user-select: none

.pull-right{
    float: right;
}


.btn-round
    -webkit-appearance: none;
    background-color: rgba(10, 10, 10, 0.1);
    border: none;
    border-radius: 290486px;
    cursor: pointer;
    display: inline-block;
    height: 24px;
    outline: none;
    position: relative;
    vertical-align: top;
    width: 24px;
    color:#fff;
    .fa
        margin-right: 0px !important;

.btn-success
    &:hover
        background-color: colors.green

.btn-warning
    &:hover
        background-color: colors.yellow

.btn-danger
    &:hover
        background-color: colors.red

.checkbox
    input
        margin-right: 5px;
/*------------------------------------*\
    ToolbarHeader
\*------------------------------------*/
.heading-counter
    margin-left: 5px;

/*------------------------------------*\
    Navbar
\*------------------------------------*/

.sidebar
    //background-color: rgba(0,0,0,1);
    width: 150px;
    min-width: 150px;
    overflow-y: scroll;
    padding: 10px

.menu
    padding-top: 30px

.menu-label
    color:#fff;
    font-size: 14px;
    .fa-plus
        cursor: pointer;
        &:hover
            color: colors.primary;
    .add-btn
        color:#fff;
        &:hover
            color: colors.primary;

.menu-list
    a
        color: #fff;
        &:hover
            color: colors.primary !important;
            background-color: transparent !important;
    .is-active
        background-color: colors.primary !important;
        &:hover
            color: #fff !important;
            background-color: colors.primary !important;
    .inbox-tag
        vertical-align: middle;
        height: 12px;
        &:hover
            background-color: whitesmoke;

.tag-list
    .tag
        margin-top: 10px

/*------------------------------------*\
    Main
\*------------------------------------*/

.main-content
    padding: 10px;


/*------------------------------------*\
    RepeatPicker
\*------------------------------------*/

.repeat-picker
    margin-top: 5px;
    span
        vertical-align: -webkit-baseline-middle;
        margin-right: 10px;
    .menu-label
        color: colors.grey-text

/*------------------------------------*\
    InfoBox
\*------------------------------------*/

.notification
    position: absolute;
    width: 100%;
    z-index: 2000; //To stay over modals, they have z-index: 1968
    max-height: 50px;
    transition: all .5s;
    .delete
        background-color: rgba(10, 10, 10, 0.1) !important;
        &:hover
            background-color: rgba(10, 10, 10, 0.2) !important;

/*------------------------------------*\
    Tasklist
\*------------------------------------*/

/*------------------------------------*\
    Task
\*------------------------------------*/

.task
    margin-bottom: 20px;
    .card-header-title
        .btn-round
            margin-top: 5px;
            margin-left: 5px;
            width: 10%;
        small
            margin-top: 2px;
            margin-left: 10px;
    .hidden-content
        max-height: 0px;
        opacity: 0;
        padding-top: 0px !important;
        padding-bottom: 0px !important;
        .content
            display: none;
    .card-content
        padding-bottom: 10px;
        padding-top: 10px;
        .active
            color: colors.yellow;
            &:hover
                color: colors.dark-grey;
        .content
            margin-bottom: 10px !important;
            p
                margin-bottom: 5px !important

.is-edit
    border: 1px solid colors.primary
    box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
/*------------------------------------*\
    Modal
\*------------------------------------*/

.modal-content
    padding: 10px
    background-color: #fff;
    border-radius: 5px;

.modal-close
    &:hover
        background-color: colors.red;



/*------------------------------------*\
    Project
\*------------------------------------*/
.project
    margin-bottom: 20px;
    .card-header-title
        small
            margin-top: 2px;
            margin-left: 10px;
    .card-content
        .active
            color: colors.yellow;
    .content
        ul
            list-style: none !important;
    .menu-label
        color: colors.grey-text
    .menu-list
        border-left: 1px solid colors.grey
        margin: 10px;
        padding-left: 10px;
    .icon
        margin-left: 5px;
        display: inline;
        .fa-check
            color: colors.green;
    .media-right
        button
            margin-top: 5px
/*------------------------------------*\
    CreateTaskWindow
\*------------------------------------*/
.create-task-window
    background-color: #fff;
    padding: 20px;
